n = int(input("Введите количество рядов:"))
g = input('Выбирите букву n, t, i :')
if g == "n".lower():
    for i in range(n, 0, -1):
        print((n - i) * ' ' + i * '*')
if g == "t".lower():
    for i in range(n, 0, -1):
        print((n-i) * '*' + i * '')
if g == "i".lower():
    for i in range(n, 0, -1):
        print((n-i) * '*' + i * '*')
